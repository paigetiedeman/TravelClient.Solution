<h1>Edit Review:</h1>

<form action="/Reviews/Details/@(Model.ReviewId)" method="post">
  <label for="name">Review's Name</label>
  <input id="name" name="name" type="text" value="@(Model.Name)">
  <label for="city">Review's City</label>
  <input id="city" name="city" type="text" value="@(Model.City)">
  <label for="country">Review's Country</label>
  <input id="country" name="country" type="text" value="@(Model.Country)">
  <label for="rating">Review's Rating</label>
  <input id="rating" name="rating" type="number" min="1" max="10" value="@(Model.Rating)">
  <label for="description">Review:</label>
  <input id="description" name="description" type="text" value="@(Model.Description)">
  <button type="submit">Submit!</button>
</form>

<a href="/Reviews/Details/@(Model.ReviewId)"><p>Details</p></a>