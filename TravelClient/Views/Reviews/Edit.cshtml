<h1>Edit Review:</h1>

<form action="/Reviews/Details/@(Model.ReviewId)" method="post">
  <label for="name">Review's Name</label>
  <input id="name" name="name" type="text" value="@(Model.Name)" class="form-control">
  <label for="city">Review's City</label>
  <input id="city" name="city" type="text" value="@(Model.City)" class="form-control">
  <label for="country">Review's Country</label>
  <input id="country" name="country" type="text" value="@(Model.Country)" class="form-control">
  <label for="rating">Review's Rating</label>
  <input id="rating" name="rating" type="number" min="1" max="10" value="@(Model.Rating)" class="form-control">
  <label for="description">Review:</label>
  <input id="description" name="description" type="text" value="@(Model.Description)" class="form-control">
  <br>
  <button type="submit" class="btn btn-dark">Submit!</button>
</form>
<br>
<a href="/Reviews/Details/@(Model.ReviewId)" class="btn btn-dark">Details</a>